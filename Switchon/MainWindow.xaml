<Window x:Class="Switchon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Switchon"
        mc:Ignorable="d"
        Title="Switchon" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="SearchBox" Text="" TextWrapping="Wrap" Height="20" VerticalAlignment="Top" TextChanged="SearchBox_TextChanged" PreviewKeyDown="SearchBox_KeyDown"/>
        <ListBox x:Name="WindowList" Margin="0,20,0,0" ItemsSource="{Binding}" KeyDown="WindowList_KeyDown">
        </ListBox>
    </Grid>
</Window>
